
@{
    ViewData["Title"] = "Index";
}
@model PaginateVM<UserProfile>
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Users</h4>
            <div class="single-table">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered progress-table text-center">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Img</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Join Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                        <tr>
                            <td>@item.Id</td>
                                                      
                            <td class="py-1">
                            <img  width="30" height="30" src="~/assets/images/users/@item.NFTUser.UserName/profile/@item.ProfileImageUrl" alt="image"/>
                          </td>
                          <td>@item.NFTUser.UserName</td>
                          <td>@item.NFTUser.Email</td>
                          <td>@item.CreatedDate</td>
                                                              
                          <td>
                                    <ul class="d-flex justify-content-center">
                                        <li class="mr-3"><a asp-action="Details" asp-controller="User" asp-route-id="@item.Id" class="text-secondary"><i class="fa fa-edit"></i></a></li>
                                        @*<li><a asp-action="Delete" asp-route-id="@item.Id" asp-controller="User" class="text-danger"><i class="ti-trash"></i></a></li>*@
                                    </ul>
                                </td>
                        </tr>
                        }
                    </tbody>
                    </table>
                    <nav class="mt-5" aria-label="...">
		  <ul class="pagination pagination-sm">
			  @if (Model.CurrentPage >1)
					{
			<li class="page-item p-lg-1" aria-current="page">
				<a asp-action="Index" asp-route-page="@Model.CurrentPage-1" class="page-link">Previous</a>
			</li>
					}
			  @for (int i = 1; i <= Model.MaxPageCount; i++)
					{
			<li class="page-item p-lg-1 @(Model.CurrentPage == i ? "disabled" :"")" aria-current="page">
				<a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
			</li>
					}
			  @if (Model.CurrentPage <Model.MaxPageCount)
					{
			<li class="page-item p-lg-1" aria-current="page">
				<a asp-action="Index" asp-route-page="@(Model.CurrentPage+1)" class="page-link">Next</a>
			</li>
					}
		  </ul>
		</nav>
                </div>
            </div>
        </div>
    </div>
</div>
