
@{
    ViewData["Title"] = "Details";
}
@model NFTDetailsVM
<div class="col-lg-6 mt-5">
    <div class="card">
        <div class="card-body">
            <div class="media mb-5">
                <img class="mr-4" style="object-fit: cover;width:100px;height:100px;" src="~/assets/media/nft/@Model.Metadata.MediaUrl" alt="image">
                <div class="media-body">
                    <h4 class="mb-3">@Model.Metadata.NFT.Name</h4> 
                </div>
            </div>
                <div class="col-md-6 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Details</h4>
                <ul class="list-group">
                    <li class="list-group-item">Owner:@Model.Metadata.NFT.Owner.UserName</li>
                    <li class="list-group-item">Creator:@Model.Metadata.Creator.UserName</li>
                    <li class="list-group-item">Price:@Model.Metadata.NFT.Price</li>
                </ul>
            </div>
        </div>
    </div>
        </div>
    </div>
</div>
<div class="col-lg-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Sales History</h4>
            <div class="single-table">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped text-center">
                        <thead class="text-uppercase">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">From</th>
                                <th scope="col">To</th>
                                <th scope="col">Price</th>
                                <th scope="col">Date</th>
                                @*<th scope="col">Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Sales)
                                    {
                                        
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.From.UserName</td>
                                <td>@item.To.UserName</td>
                                <td>@item.SalePrice</td>
                                <td>@item.Date</td>
                                @*<td><a ><i class="ti-trash"></i></a> </td>*@
                            </tr>
                                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Auctions History</h4>
            <div class="single-table">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered progress-table text-center">
                        <thead class="text-uppercase">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Start time</th>
                                <th scope="col">End time</th>
                                <th scope="col">Starting price</th>
                                <th scope="col">Latest price</th>
                                <th scope="col">Highest Bidder</th>
                                <th scope="col">Status</th>
                                @*<th scope="col">Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Auctions)
                                    {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.StartTime</td>
                                <td>@item.EndTime</td>
                                <td>@item.StartingPrice</td>
                                <td>@item.CurrentPrice</td>
                                <td>@item.Winner.NFTUser.UserName</td>
                                <td>
                                                @if (item.IsCompleted)
                                                {
                                                <span class="status-p bg-success">Completed</span>
                                                    
                                                }
                                                else
                                                {
                                                <span class="status-p bg-primary">On Going</span>
                                                }</td>
@*                                <td>
                                    <ul class="d-flex justify-content-center">
                                        <li class="mr-3"><a asp-action="Details" asp-controller="Auction" asp-route-id="@item.Id" asp-area="Manage" class="text-secondary"><i class="fa fa-edit"></i></a></li>
                                        <li><a href="#" class="text-danger"><i class="ti-trash"></i></a></li>
                                    </ul>
                                </td>*@
                            </tr>
                                        
                                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

