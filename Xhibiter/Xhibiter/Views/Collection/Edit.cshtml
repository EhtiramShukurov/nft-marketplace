
@{
    ViewData["Title"] = "Edit";
}
@model EditCollectionVM

    <main class="pt-[5.5rem] lg:pt-24">
      <!-- Banner -->
      <form method="post" enctype="multipart/form-data">

      <div class="relative">
            <img src="~/assets/images/users/@User.Identity.Name/collections/@Model.Name/@ViewBag.Imgs[2]" alt="banner" class="h-[18.75rem] w-full object-cover" />
        <div class="container relative -translate-y-4">
          <div
            class="group absolute right-0 bottom-4 flex items-center rounded-lg bg-white py-2 px-4 font-display text-sm hover:bg-accent"
          >
            <input asp-for="CoverImg" accept="image/*" class="absolute inset-0 cursor-pointer opacity-0" />
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              width="24"
              height="24"
              class="mr-1 h-4 w-4 fill-jacarta-400 group-hover:fill-white"
            >
              <path fill="none" d="M0 0h24v24H0z"></path>
              <path
                d="M15.728 9.686l-1.414-1.414L5 17.586V19h1.414l9.314-9.314zm1.414-1.414l1.414-1.414-1.414-1.414-1.414 1.414 1.414 1.414zM7.242 21H3v-4.243L16.435 3.322a1 1 0 0 1 1.414 0l2.829 2.829a1 1 0 0 1 0 1.414L7.243 21z"
              ></path>
            </svg>
            <span class="mt-0.5 block group-hover:text-white">Edit cover photo</span>
          </div>
        </div>
      </div>
      <!-- end banner -->

      <!-- Edit Profile -->
      <section class="relative py-16 dark:bg-jacarta-800">
        <picture class="pointer-events-none absolute inset-0 -z-10 dark:hidden">
          <img src="~/assets/img/gradient_light.jpg" alt="gradient" class="h-full w-full" />
        </picture>

        <div class="container">
          <div class="mx-auto max-w-[48.125rem] md:flex">
            <!-- Form -->
            <div class="mb-12 md:w-1/2 md:pr-8">
              <div class="mb-6">
                <label asp-for="Name" class="mb-1 block font-display text-sm text-jacarta-700 dark:text-white"
                  ></label>
                <input asp-for="Name"
                  class="w-full rounded-lg border-jacarta-100 py-3 hover:ring-2 hover:ring-accent/10 focus:ring-accent dark:border-jacarta-600 dark:bg-jacarta-700 dark:text-white dark:placeholder:text-jacarta-300"
                  placeholder="Enter username"
                />
                <span asp-validation-for="Name" class="text-red"></span>
              </div>
              <div class="mb-6">
                <label asp-for="Description" class="mb-1 block font-display text-sm text-jacarta-700 dark:text-white"
                  ></label>
                <textarea
                    asp-for="Description"
                  class="w-full rounded-lg border-jacarta-100 py-3 hover:ring-2 hover:ring-accent/10 focus:ring-accent dark:border-jacarta-600 dark:bg-jacarta-700 dark:text-white dark:placeholder:text-jacarta-300"
                  placeholder="Tell the world your story!"
                ></textarea>
                <span asp-validation-for="Description" class="text-red"></span>
              </div>
                          
              <div class="relative">
              <div>
                <label asp-for="CategoryId" class="mb-2 block font-display text-jacarta-700 dark:text-white">Categories</label>
                <div class="mb-3 flex items-center space-x-2">
                  <p class="text-2xs dark:text-jacarta-300">
                    This is the collection where your item will appear.
                    <span
                      class="inline-block"
                      data-tippy-content="Moving items to a different collection may take up to 30 minutes."
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        width="24"
                        height="24"
                        class="ml-1 -mb-[3px] h-4 w-4 fill-jacarta-500 dark:fill-jacarta-300"
                      >
                        <path fill="none" d="M0 0h24v24H0z"></path>
                        <path
                          d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16zM11 7h2v2h-2V7zm0 4h2v6h-2v-6z"
                        ></path>
                      </svg>
                    </span>
                  </p>
                </div>
              </div>
              <div class=" my-1 cursor-pointer">
                  <select asp-for="CategoryId" class=" z-10  w-full whitespace-nowrap rounded-xl bg-white py-4 px-2 text-left shadow-xl dark:bg-jacarta-800">
                      <option selected  disabled>Select collections</option>
                      @foreach(var item in ViewBag.Categories)
                      {
                          <option class="text-jacarta-700 dark:text-white" value="@item.Value">@item.Text</option>
                      }
                  </select>
              </div>
              <span asp-validation-for="CategoryId" class="text-red"></span>
            </div>

              <div class="flex space-x-4 ">
                <button
                  class=" w-36 rounded-full bg-accent py-1 px-8 text-center font-semibold text-white shadow-accent-volume transition-all hover:bg-accent-dark"
                >
                  Update Collection
                </button>
                <a
                    asp-action="Index" asp-controller="Collection" asp-route-id="@Model.Id"
                  class="w-36 rounded-full bg-white py-4 px-8 text-center font-semibold text-accent shadow-white-volume transition-all hover:bg-accent-dark hover:text-white hover:shadow-accent-volume"
                >
                  Cancel
                </a>
              </div>
            </div>

            <!-- Avatar -->
            <div class="flex space-x-5 md:w-1/2 md:pl-8">
              <div class="shrink-0">
                <figure class="relative inline-block">
                  <img
                       width="150"
                height="150"
                    src="~/assets/images/users/@User.Identity.Name/collections/@Model.Name/@ViewBag.Imgs[1]"
                    alt="collection avatar"
                    class="rounded-xl border-[5px] border-white dark:border-jacarta-600"
                  />
                  <div
                    class="group absolute -right-3 -bottom-2 h-8 w-8 overflow-hidden rounded-full border border-jacarta-100 bg-white text-center hover:border-transparent hover:bg-accent"
                  >
                    <input asp-for="LogoImg" accept="image/*" class="absolute top-0 left-0 w-full cursor-pointer opacity-0" />
                    <div class="flex h-full items-center justify-center">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        width="24"
                        height="24"
                        class="h-4 w-4 fill-jacarta-400 group-hover:fill-white"
                      >
                        <path fill="none" d="M0 0h24v24H0z" />
                        <path
                          d="M15.728 9.686l-1.414-1.414L5 17.586V19h1.414l9.314-9.314zm1.414-1.414l1.414-1.414-1.414-1.414-1.414 1.414 1.414 1.414zM7.242 21H3v-4.243L16.435 3.322a1 1 0 0 1 1.414 0l2.829 2.829a1 1 0 0 1 0 1.414L7.243 21z"
                        />
                      </svg>
                    </div>
                  </div>
                </figure>
              </div>
              <div class="mt-4">
                <span class="mb-3 block font-display text-sm text-jacarta-700 dark:text-white">Logo Image</span>
              </div>
            </div>
            <div class="flex space-x-5 md:w-1/2 md:pl-8">
              <div class="shrink-0">
                <figure class="relative inline-block">
                  <img
                       width="150"
                height="150"
                    src="~/assets/images/users/@User.Identity.Name/collections/@Model.Name/@ViewBag.Imgs[0]"
                    alt="collection avatar"
                    class="rounded-xl border-[5px] border-white dark:border-jacarta-600"
                  />
                  <div
                    class="group absolute -right-3 -bottom-2 h-8 w-8 overflow-hidden rounded-full border border-jacarta-100 bg-white text-center hover:border-transparent hover:bg-accent"
                  >
                    <input asp-for="MainImg" accept="image/*" class="absolute top-0 left-0 w-full cursor-pointer opacity-0" />
                    <div class="flex h-full items-center justify-center">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        width="24"
                        height="24"
                        class="h-4 w-4 fill-jacarta-400 group-hover:fill-white"
                      >
                        <path fill="none" d="M0 0h24v24H0z" />
                        <path
                          d="M15.728 9.686l-1.414-1.414L5 17.586V19h1.414l9.314-9.314zm1.414-1.414l1.414-1.414-1.414-1.414-1.414 1.414 1.414 1.414zM7.242 21H3v-4.243L16.435 3.322a1 1 0 0 1 1.414 0l2.829 2.829a1 1 0 0 1 0 1.414L7.243 21z"
                        />
                      </svg>
                    </div>
                  </div>
                </figure>
              </div>
              <div class="mt-4">
                <span class="mb-3 block font-display text-sm text-jacarta-700 dark:text-white">Main Image</span>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- end edit profile -->
      </form>
    </main>