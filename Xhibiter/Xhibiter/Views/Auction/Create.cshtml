
@{
    ViewData["Title"] = "Create";
}
@model Auction
    <main>
      <!-- Create -->
      <section class="relative py-24">
        <picture class="pointer-events-none absolute inset-0 -z-10 dark:hidden">
          <img src="~/assets/img/gradient_light.jpg" alt="gradient" class="h-full w-full" />
        </picture>
        <div class="container">
          <h1 class="py-16 text-center font-display text-4xl font-medium text-jacarta-700 dark:text-white">Put your NFT on auction</h1>
          <form method="post">
          <div class="mx-auto max-w-[48.125rem]">
            <!-- File Upload -->
            <!-- Name -->
            <div class="mb-6">
              <label asp-for="StartingPrice" class="mb-2 block font-display text-jacarta-700 dark:text-white"
                >Starting Price<span class="text-red">*</span></label>
              <input asp-for="StartingPrice"
                class="w-full rounded-lg border-jacarta-100 py-3 hover:ring-2 hover:ring-accent/10 focus:ring-accent dark:border-jacarta-600 dark:bg-jacarta-700 dark:text-white dark:placeholder:text-jacarta-300"
                placeholder="Item name"
              />
                <span asp-validation-for="StartingPrice" class="text-red"></span>
            </div>
            <div class="mb-6">
              <label asp-for="MinimumIncrement" class="mb-2 block font-display text-jacarta-700 dark:text-white"
                >Minimum Increment<span class="text-red">*</span></label>
              <input asp-for="MinimumIncrement"
                class="w-full rounded-lg border-jacarta-100 py-3 hover:ring-2 hover:ring-accent/10 focus:ring-accent dark:border-jacarta-600 dark:bg-jacarta-700 dark:text-white dark:placeholder:text-jacarta-300"
                placeholder="Item name"
              />
                <span asp-validation-for="MinimumIncrement" class="text-red"></span>
            </div>
            <div class="mb-6">
              <label asp-for="EndTime" class="mb-2 block font-display text-jacarta-700 dark:text-white"
                >End Time<span class="text-red">*</span></label>
              <input asp-for="EndTime"
                class="w-full rounded-lg border-jacarta-100 py-3 hover:ring-2 hover:ring-accent/10 focus:ring-accent dark:border-jacarta-600 dark:bg-jacarta-700 dark:text-white dark:placeholder:text-jacarta-300"
                placeholder="Item name"
              />
                <span asp-validation-for="EndTime" class="text-red"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-red"></div>
            <!-- Submit -->
            <div class=" flex space-x-4 ">
                <button
                    type="submit"
                  class=" w-36 rounded-full bg-accent py-1 px-8 text-center font-semibold text-white shadow-accent-volume transition-all hover:bg-accent-dark"
                >
                  Put on Auction
                </button>
                <a
                    asp-action="Index" asp-controller="Profile" asp-route-username="@User.Identity.Name"
                  class="w-36 rounded-full bg-white py-4 px-8 text-center font-semibold text-accent shadow-white-volume transition-all hover:bg-accent-dark hover:text-white hover:shadow-accent-volume"
                >
                  Cancel
                </a>
              </div>
          </div>

          </form>
        </div>
      </section>
      <!-- end create -->
    </main>

